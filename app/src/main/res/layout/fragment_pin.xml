<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:id="@+id/verificationCodeInput"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="80dp"
        android:cursorVisible="true"
        android:digits="1234567890"
        android:inputType="number"
        android:layoutDirection="ltr"
        android:maxLength="4"
        android:textColor="@color/purple"
        android:textCursorDrawable="@color/purple"
        android:textIsSelectable="false"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEnterPin"
        app:pinBackgroundDrawable="@drawable/bg_item_pin"
        app:pinTextBottomPadding="@dimen/_14sdp" />

    <TextView
        android:id="@+id/tvEnterPin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="78dp"
        android:maxEms="8"
        android:text="Введіть Ваш пін-код."
        android:textAppearance="@style/H1"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>