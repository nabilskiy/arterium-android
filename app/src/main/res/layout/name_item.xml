<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvInterfaceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/ukrainian"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        android:layout_marginTop="@dimen/default_margin_vertical"
        />

    <CheckBox
        android:id="@+id/cbShowHide"
        android:layout_width="@dimen/my_profile_checkbox_width"
        android:layout_height="@dimen/my_profile_checkbox_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_save_icon"
        android:button="@null"
        android:layout_marginTop="@dimen/default_margin_vertical"
        android:checked="true"
        />

    <View
        android:id="@+id/vDivideLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_divider_line_height"
        app:layout_constraintTop_toBottomOf="@id/tvInterfaceName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/light_grey"
        android:layout_marginTop="@dimen/default_margin_vertical"
        />
</androidx.constraintlayout.widget.ConstraintLayout>