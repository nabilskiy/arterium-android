<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_dashboard_details"
            android:elevation="5dp"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:behavior_hideable="true"
            app:behavior_peekHeight="0dp">

            <LinearLayout
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:text="@string/level_title"
                    android:textAppearance="@style/H2"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backIv"
                    android:layout_gravity="center"
                    android:layout_marginEnd="22dp"
                    app:srcCompat="@drawable/ic_close_gray"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_destination"
                    android:textSize="12sp"
                    android:textColor="#232323"
                    android:lineSpacingExtra="2sp"
                    android:gravity="center_vertical"
                    android:alpha="0.4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/level_Ñ"
                    android:textAppearance="@style/sf_pro_text_16"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="2sp"
                    android:gravity="center_vertical"
                    android:alpha="0.8" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase"
                        android:textSize="12sp"
                        android:textColor="#232323"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase_primary"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase_secondary"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8"  />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase_month"
                        android:textSize="12sp"
                        android:textColor="#232323"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5-10"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase_limit"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8"  />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase_month"
                        android:textSize="12sp"
                        android:textColor="#232323"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8"  />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8"  />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_destination"
                    android:textSize="12sp"
                    android:textColor="#232323"
                    android:lineSpacingExtra="2sp"
                    android:gravity="center_vertical"
                    android:alpha="0.4" />

                <TextView
                    android:text="@string/level_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/sf_pro_text_16"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="2sp"
                    android:gravity="center_vertical"
                    android:alpha="0.8" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase"
                        android:textSize="12sp"
                        android:textColor="#232323"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase_primary"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase_secondary"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8"  />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase_month"
                        android:textSize="12sp"
                        android:textColor="#232323"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11-15"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase_limit"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8"  />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase_month"
                        android:textSize="12sp"
                        android:textColor="#232323"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8"  />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8"  />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_destination"
                    android:textSize="12sp"
                    android:textColor="#232323"
                    android:lineSpacingExtra="2sp"
                    android:gravity="center_vertical"
                    android:alpha="0.4" />

                <TextView
                    android:text="@string/level_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/sf_pro_text_16"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="2sp"
                    android:gravity="center_vertical"
                    android:alpha="0.8" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase"
                        android:textSize="12sp"
                        android:textColor="#232323"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase_primary"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase_secondary"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8"  />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase_month"
                        android:textSize="12sp"
                        android:textColor="#232323"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=">16"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase_limit"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8"  />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level_purchase_month"
                        android:textSize="12sp"
                        android:textColor="#232323"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="150"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8"  />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:textAppearance="@style/sf_pro_text_16"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_vertical"
                        android:alpha="0.8"  />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>