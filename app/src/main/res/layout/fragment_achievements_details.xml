<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_grey_to_black">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAchievementName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нагороди"
        android:layout_marginTop="@dimen/_14sdp"
        android:textAppearance="@style/H2"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/ivAchievement"
        app:layout_constraintStart_toStartOf="@+id/ivAchievement"
        app:layout_constraintTop_toBottomOf="@+id/ivAchievement" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAchievementHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:maxEms="18"
        android:text="Додайте 25 нових пацієнтів і куруйте їх протягом року."
        android:textAppearance="@style/sf_pro_text_16"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAchievementName" />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_42sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_white" />

    <ImageView
        android:id="@+id/ivAchievement"
        android:layout_width="254dp"
        android:layout_height="256dp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivClose"
        app:srcCompat="@drawable/ic_achievement_closed" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBtnBack"
        android:background="@drawable/bg_btn_white"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_56sdp"
        android:layout_height="@dimen/_46sdp">


        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            app:layout_constraintEnd_toStartOf="@+id/tvBack"
            app:layout_constraintTop_toTopOf="@+id/tvBack"
            app:srcCompat="@drawable/ic_chevron_right_purpule" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:text="Повернутися до нагород"
            android:textAppearance="@style/sf_pro_semibold_16"
            android:textColor="@color/purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>