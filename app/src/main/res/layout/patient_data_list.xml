<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvPatientDataListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/telephone_number"
        android:textAppearance="@style/sf_pro_text_12"
        android:textSize="@dimen/default_small_text_size"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/tvPatientDataListValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number"
        android:textAppearance="@style/sf_pro_semibold_16"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPatientDataListTitle"
         />

    <View
        android:id="@+id/vDivideLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_divider_line_height"
        app:layout_constraintTop_toBottomOf="@id/tvPatientDataListValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/light_grey"
        android:layout_marginTop="@dimen/patient_card_data_divide_line_margin_top"
        />
</androidx.constraintlayout.widget.ConstraintLayout>