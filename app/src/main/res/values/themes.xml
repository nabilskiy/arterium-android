<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Arterium" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyNoActionBarShadowTheme" parent="Theme.Arterium">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="MyNoActionBarShadowThemeRed" parent="Theme.Arterium.Red">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="MyNoActionBarShadowThemeBlue" parent="Theme.Arterium.Blue">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Arterium.Red" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Arterium.Blue" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TransparentDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PurpleRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/purple</item>
    </style>

    <style name="ChooseProgramDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowIsFloating">true</item>

    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/bg_toolbar</item>
    </style>

    <!--    Calendar-->
    <style name="DefaultCalendarStyle">
        <item name="mcv_selectionMode">range</item>
        <item name="mcv_showOtherDates">decorated_disabled</item>
        <item name="mcv_dateTextAppearance">@style/DayCalendarTextAppearance</item>
        <item name="mcv_weekDayTextAppearance">@style/WeekCalendarTextAppearance</item>
        <item name="mcv_headerTextAppearance">@style/HeaderCalendarTextAppearance</item>
        <item name="mcv_allowClickDaysOutsideCurrentMonth">false</item>
        <item name="mcv_titleAnimationOrientation">horizontal</item>
        <item name="mcv_rightArrow">@drawable/ic_arrow_right</item>
        <item name="mcv_leftArrow">@drawable/ic_arrow_left</item>
        <item name="mcv_monthLabels">@array/calendar_month_general</item>
    </style>

    <style name="DayCalendarTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAppearance">@style/sf_pro_text_16</item>
    </style>

    <style name="WeekCalendarTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/sf_pro_semibold_13</item>
    </style>

    <style name="HeaderCalendarTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAppearance">@style/H2</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

